        <!-- =============== Main Content =============== -->
        <main class="ml-72 flex-1 p-8 overflow-y-auto">
            <header class="flex justify-between items-center mb-8">
                 <div>
                    <h1 class="text-3xl font-bold text-gray-800">Manajemen Cadangan & Pemulihan Data</h1>
                    <p class="text-gray-600">Kelola jadwal, riwayat, dan permintaan pemulihan data sistem.</p>
                </div>
                <div class="flex items-center gap-4">
                    <div class="text-right">
                        <p class="font-semibold text-gray-800">Admin Jurusan</p>
                        <p class="text-sm text-gray-500">Online</p>
                    </div>
                    <div class="w-12 h-12 bg-white rounded-full flex items-center justify-center shadow">
                        <i data-lucide="shield-check" class="text-gray-600"></i>
                    </div>
                </div>
            </header>
            
            <div class="space-y-8">
                <!-- Status Backup Terkini -->
                <div class="bg-white p-6 rounded-lg shadow-md border-l-4 border-green-500">
                     <h2 class="text-xl font-bold text-gray-800 mb-4">Status Backup Terkini</h2>
                     <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                         <div class="flex items-center gap-3">
                            <i data-lucide="shield-check" class="w-8 h-8 text-green-500"></i>
                            <div>
                                <p class="text-sm text-gray-500">Status Otomatis</p>
                                <p class="font-bold text-green-600">AKTIF</p>
                            </div>
                         </div>
                         <div class="flex items-center gap-3">
                            <i data-lucide="clock" class="w-8 h-8 text-blue-500"></i>
                            <div>
                                <p class="text-sm text-gray-500">Backup Terakhir</p>
                                <p class="font-semibold text-gray-700">Kamis, 19 Jun 2025, 01:00</p>
                            </div>
                         </div>
                         <div class="flex items-center gap-3">
                            <i data-lucide="calendar-clock" class="w-8 h-8 text-indigo-500"></i>
                            <div>
                                <p class="text-sm text-gray-500">Jadwal Berikutnya</p>
                                <p class="font-semibold text-gray-700">Jumat, 20 Jun 2025, 01:00</p>
                            </div>
                         </div>
                     </div>
                </div>

                <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
                    <!-- Kolom Kiri: Pengelolaan & Riwayat -->
                    <div class="lg:col-span-2 space-y-8">
                        <!-- Pengelolaan Jadwal -->
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <h2 class="text-xl font-bold text-gray-800 mb-4">Pengelolaan Jadwal Backup</h2>
                            <div class="flex items-center gap-4">
                                <label for="backup-frequency" class="text-sm font-medium text-gray-700">Frekuensi Backup Otomatis:</label>
                                <select id="backup-frequency" class="border border-gray-300 rounded-md text-sm p-2">
                                    <option>Harian (Direkomendasikan)</option>
                                    <option>Mingguan</option>
                                </select>
                                <button class="px-4 py-2 bg-blue-600 text-white text-sm font-semibold rounded-md hover:bg-blue-700">Simpan Jadwal</button>
                            </div>
                             <p class="mt-3 text-xs text-gray-500">Perubahan akan diterapkan pada siklus berikutnya. Backup harian sangat direkomendasikan.</p>
                        </div>

                        <!-- Riwayat Backup -->
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <h2 class="text-xl font-bold text-gray-800 mb-4">Riwayat Backup</h2>
                            <div class="overflow-x-auto">
                                <table class="w-full text-sm">
                                    <thead class="text-xs text-gray-500 bg-gray-50">
                                        <tr>
                                            <th class="py-2 px-3 text-left">Tanggal & Waktu</th>
                                            <th class="py-2 px-3 text-left">Jenis</th>
                                            <th class="py-2 px-3 text-left">Status</th>
                                            <th class="py-2 px-3 text-left">Ukuran</th>
                                            <th class="py-2 px-3 text-center">Aksi</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="border-b">
                                            <td class="py-3 px-3">19 Jun 2025, 01:00</td>
                                            <td class="py-3 px-3">Otomatis</td>
                                            <td class="py-3 px-3"><span class="px-2 py-1 text-xs font-bold text-green-800 bg-green-100 rounded-full">Berhasil</span></td>
                                            <td class="py-3 px-3">25.4 MB</td>
                                            <td class="py-3 px-3 text-center"><a href="#" class="font-medium text-blue-600 hover:underline">Unduh</a></td>
                                        </tr>
                                         <tr class="border-b">
                                            <td class="py-3 px-3">18 Jun 2025, 15:30</td>
                                            <td class="py-3 px-3">Manual</td>
                                            <td class="py-3 px-3"><span class="px-2 py-1 text-xs font-bold text-green-800 bg-green-100 rounded-full">Berhasil</span></td>
                                            <td class="py-3 px-3">25.2 MB</td>
                                            <td class="py-3 px-3 text-center"><a href="#" class="font-medium text-blue-600 hover:underline">Unduh</a></td>
                                        </tr>
                                        <tr class="border-b">
                                            <td class="py-3 px-3">18 Jun 2025, 01:00</td>
                                            <td class="py-3 px-3">Otomatis</td>
                                            <td class="py-3 px-3"><span class="px-2 py-1 text-xs font-bold text-red-800 bg-red-100 rounded-full">Gagal</span></td>
                                            <td class="py-3 px-3">-</td>
                                            <td class="py-3 px-3 text-center">-</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- Kolom Kanan: Aksi Manual -->
                    <div class="lg:col-span-1 space-y-8">
                         <!-- Backup Manual -->
                        <div class="bg-white p-6 rounded-lg shadow-md">
                            <h2 class="text-xl font-bold text-gray-800 mb-2">Backup Manual</h2>
                            <p class="text-sm text-gray-600 mb-4">Buat cadangan data sistem saat ini juga, di luar jadwal otomatis.</p>
                            <button class="w-full flex items-center justify-center gap-2 px-4 py-2 text-sm bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 font-semibold transition-colors shadow-sm">
                                <i data-lucide="download-cloud" class="w-5 h-5"></i>
                                Lakukan Backup Sekarang
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Permintaan Restore Data -->
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h2 class="text-xl font-bold text-gray-800 mb-4">Permintaan Restore Data</h2>
                    <!-- Peringatan Kritis -->
                    <div class="bg-red-100 border-l-4 border-red-500 text-red-800 p-4 rounded-r-lg mb-6">
                        <h4 class="font-bold flex items-center gap-2"><i data-lucide="alert-octagon" class="w-5 h-5"></i>PERHATIAN!</h4>
                        <p class="mt-2 text-sm">Proses restore akan <strong>MENGGANTI</strong> seluruh data saat ini dengan data dari file backup yang dipilih. Semua data yang dibuat setelah tanggal backup tersebut akan <strong>HILANG SECARA PERMANEN</strong>. Fitur ini hanya untuk keadaan darurat dan memerlukan persetujuan teknis.</p>
                    </div>
                    <form id="restore-form" class="space-y-4">
                        <div>
                            <label for="backup-version-select" class="block text-sm font-medium text-gray-700">Langkah 1: Pilih Versi Backup</label>
                            <select id="backup-version-select" name="backup_version" required class="mt-1 block w-full px-3 py-2 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                                <option value="">Pilih backup yang berhasil...</option>
                                <option value="backup_19_jun">19 Jun 2025, 01:00 (Otomatis)</option>
                                <option value="backup_18_jun">18 Jun 2025, 15:30 (Manual)</option>
                            </select>
                        </div>
                        <div>
                            <label for="restore-reason" class="block text-sm font-medium text-gray-700">Langkah 2: Alasan Permintaan (Wajib)</label>
                            <textarea id="restore-reason" name="reason" rows="4" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" placeholder="Jelaskan secara detail mengapa proses restore diperlukan..."></textarea>
                        </div>
                        <div class="flex items-start">
                            <input id="restore-confirm-check" type="checkbox" required class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500 mt-0.5">
                            <label for="restore-confirm-check" class="ml-2 block text-sm text-gray-800">Langkah 3: Saya telah membaca peringatan di atas dan sepenuhnya memahami risiko serta konsekuensi dari permintaan restore data ini.</label>
                        </div>
                         <div class="pt-2 text-right">
                             <button id="restore-submit-btn" type="submit" class="inline-flex items-center gap-2 px-4 py-2 text-sm bg-red-600 text-white rounded-lg hover:bg-red-700 font-semibold transition-colors shadow-sm disabled:bg-gray-400 disabled:cursor-not-allowed" disabled>
                                <i data-lucide="send" class="w-4 h-4"></i>
                                Kirim Permintaan Restore ke Tim Teknis
                            </button>
                         </div>
                    </form>
                </div>

            </div>
        </main>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/lucide@0.271.0/dist/umd/lucide.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        // Render Ikon
        if (typeof lucide !== 'undefined') {
          lucide.createIcons();
        } else {
          console.error('Lucide tidak tersedia.');
        }
        
        // --- Restore Form Logic ---
        const restoreForm = document.getElementById('restore-form');
        const backupVersionSelect = document.getElementById('backup-version-select');
        const restoreReason = document.getElementById('restore-reason');
        const restoreConfirmCheck = document.getElementById('restore-confirm-check');
        const restoreSubmitBtn = document.getElementById('restore-submit-btn');

        function validateRestoreForm() {
            const isVersionSelected = backupVersionSelect.value !== '';
            const isReasonFilled = restoreReason.value.trim() !== '';
            const isConfirmed = restoreConfirmCheck.checked;

            if (isVersionSelected && isReasonFilled && isConfirmed) {
                restoreSubmitBtn.disabled = false;
            } else {
                restoreSubmitBtn.disabled = true;
            }
        }

        backupVersionSelect.addEventListener('change', validateRestoreForm);
        restoreReason.addEventListener('input', validateRestoreForm);
        restoreConfirmCheck.addEventListener('change', validateRestoreForm);

        restoreForm.addEventListener('submit', (e) => {
            e.preventDefault();
            alert('Permintaan restore telah dikirim ke tim teknis untuk ditinjau.');
            restoreForm.reset();
            validateRestoreForm();
        });


        // --- Sidebar Logic ---
        const menuButtons = document.querySelectorAll('button[data-menu]');
        menuButtons.forEach(button => {
            button.addEventListener('click', () => {
                const menuId = button.dataset.menu;
                const submenu = document.getElementById(menuId);
                const icon = button.querySelector('[data-lucide="chevron-down"]');
                
                if (submenu) {
                    const isOpening = submenu.classList.contains('hidden');
                     document.querySelectorAll('[id^="proses-magang"], [id^="kemitraan"], [id^="konten"], [id^="pengaturan"]').forEach(otherSubmenu => {
                         if (otherSubmenu.id !== menuId) {
                            otherSubmenu.classList.add('hidden');
                            const otherButton = document.querySelector(`button[data-menu="${otherSubmenu.id}"]`);
                            otherButton?.querySelector('[data-lucide="chevron-down"]')?.classList.remove('rotate-180');
                         }
                     });
                    
                    if (isOpening) {
                        submenu.classList.remove('hidden');
                        icon?.classList.add('rotate-180');
                    } else {
                        submenu.classList.add('hidden');
                        icon?.classList.remove('rotate-180');
                    }
                }
            });
        });

      });
    </script>
</body>
