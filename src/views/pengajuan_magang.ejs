<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pengajuan Magang</title>
  <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-content-bg">
  <div class="flex min-h-screen">
    <aside class="w-72 bg-sidebar-bg text-white flex flex-col p-4 fixed h-full shadow-lg">
      <div class="text-center py-4 border-b border-white/20">
        <img src="https://placehold.co/100x100/E7EEF0/5c7a89?text=Admin" class="rounded-lg w-24 h-24 mx-auto mb-3 border-4 border-white/30"/>
        <h3 class="font-bold text-lg">Admin Jurusan</h3>
        <p class="text-sm">Sistem Informasi</p>
      </div>
      <nav class="mt-6 flex-grow overflow-y-auto pr-2">
        <ul class="space-y-1 pb-4">
          <li><a href="/admin/dashboard" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-sidebar-hover transition-colors duration-200"><i data-lucide="layout-dashboard" class="w-5 h-5"></i> Dashboard</a></li>
          <li>
            <button class="w-full flex justify-between items-center px-4 py-3 hover:bg-sidebar-hover rounded-md" data-menu="proses-magang">
              <span class="flex items-center gap-3"><i data-lucide="case-sensitive"></i> Proses Magang</span>
              <i data-lucide="chevron-down" class="w-5 h-5 rotate-180"></i>
            </button>
            <div id="proses-magang" class="pl-8 pt-1 space-y-1">
              <a href="/admin/pengajuan-magang" class="block px-4 py-2.5 rounded-md bg-sidebar-active text-sm">Pengajuan Magang</a>
              <a href="/admin/progress-magang" class="block px-4 py-2.5 rounded-md hover:bg-sidebar-hover text-sm">Progress Magang</a>
              <a href="/admin/dosen-pembimbing" class="block px-4 py-2.5 rounded-md hover:bg-sidebar-hover text-sm">Dosen Pembimbing</a>
            </div>
          </li>
        </ul>
      </nav>
      <div class="mt-auto pt-4 border-t border-white/20">
                <a href="/logout" class="flex items-center gap-3 w-fit mx-auto px-6 py-2.5 rounded-md bg-red-600/80 hover:bg-red-700/80 transition-colors duration-200">
                    <i data-lucide="log-out" class="w-5 h-5"></i>
                    Logout
                </a>
            </div>
    </aside>

    <main class="ml-72 p-8 w-full bg-gray-100">
      <h1 class="text-3xl font-bold text-gray-800 mb-6">Pengajuan Magang</h1>
      <div class="bg-white p-6 rounded-lg shadow-md">
        <table class="w-full text-left text-sm border-collapse">
          <thead>
            <tr class="text-gray-700 border-b">
              <th class="pb-2">NIM</th>
              <th class="pb-2">Nama</th>
              <th class="pb-2">Perusahaan</th>
              <th class="pb-2">Status</th>
              <th class="pb-2">Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% pengajuan.forEach(p => { %>
              <tr class="border-b hover:bg-gray-50">
                <td class="py-2"><%= p.nim %></td>
                <td class="py-2"><%= p.nama %></td>
                <td class="py-2"><%= p.perusahaan %></td>
                <td class="py-2"><%= p.status %></td>
                <td class="py-2">
                  <% if (p.status === 'Belum Diverifikasi') { %>
                    <form action="/admin/pengajuan/verifikasi/<%= p.id %>" method="POST">
                      <button class="px-3 py-1 bg-green-600 hover:bg-green-700 text-white text-sm rounded">Verifikasi</button>
                    </form>
                  <% } else { %>
                    <span class="text-green-700 font-medium">Terverifikasi</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/lucide@0.271.0/dist/umd/lucide.min.js"></script>
  <script>
    lucide.createIcons();
  </script>
</body>
</html>
