      <!-- Pengumuman Content -->
      <div class="max-w-4xl mx-auto">
        <h1 class="text-2xl font-bold mb-6 text-[#5C7988]">PENGUMUMAN TEMPAT MAGANG</h1>
        
        <!-- Daftar Pengumuman -->
        <div class="space-y-4" id="pengumuman-list">
          <!-- Pengumuman Tempat Magang 1 -->
          <div class="bg-white rounded-xl shadow-md p-6 transition hover:shadow-lg border-l-4 border-[#8EAAB8]">
