    <script src="https://cdn.jsdelivr.net/npm/lucide@0.271.0/dist/umd/lucide.min.js"></script>
    <script>
      document.addEventListener('DOMContentLoaded', function () {
        // Render Ikon
        if (typeof lucide !== 'undefined') {
          lucide.createIcons();
        } else {
          console.error('Lucide tidak tersedia.');
        }

        // --- Alokasi Modal Logic ---
        const alokasiBtn = document.getElementById('alokasi-btn');
        const alokasiModal = document.getElementById('alokasi-modal');
        const closeAlokasiBtn = document.getElementById('close-alokasi-modal-btn');
        const cancelAlokasiBtn = document.getElementById('cancel-alokasi-btn');
        const alokasiForm = document.getElementById('alokasi-form');

        alokasiBtn.addEventListener('click', () => alokasiModal.classList.remove('hidden'));
        closeAlokasiBtn.addEventListener('click', () => alokasiModal.classList.add('hidden'));
        cancelAlokasiBtn.addEventListener('click', () => alokasiModal.classList.add('hidden'));
        alokasiForm.addEventListener('submit', (e) => {
            e.preventDefault();
            console.log('Alokasi disimpan!');
            alokasiModal.classList.add('hidden');
        });

        // Logika Accordion Daftar Dosen
        const expandableButtons = document.querySelectorAll('button[data-target]');
        expandableButtons.forEach(button => {
            button.addEventListener('click', () => {
                const targetId = button.dataset.target;
                const targetPanel = document.getElementById(targetId);
                const icon = button.querySelector('[data-lucide="chevron-down"]');

                if (targetPanel) {
                    targetPanel.classList.toggle('hidden');
                }
                if (icon) {
                    icon.classList.toggle('rotate-180');
                }
            });
        });

        // Logika Dropdown Sidebar
        const menuButtons = document.querySelectorAll('button[data-menu]');
        menuButtons.forEach(button => {
            button.addEventListener('click', () => {
                const menuId = button.dataset.menu;
                const submenu = document.getElementById(menuId);
                const icon = button.querySelector('[data-lucide="chevron-down"]');
                
                if (submenu) {
                    const isOpening = submenu.classList.contains('hidden');
                     document.querySelectorAll('[id^="proses-magang"], [id^="kemitraan"], [id^="konten"], [id^="pengaturan"]').forEach(otherSubmenu => {
                         if (otherSubmenu.id !== menuId) {
                            otherSubmenu.classList.add('hidden');
                            const otherButton = document.querySelector(`button[data-menu="${otherSubmenu.id}"]`);
                            otherButton?.querySelector('[data-lucide="chevron-down"]')?.classList.remove('rotate-180');
                         }
                     });
                    
                    if (isOpening) {
                        submenu.classList.remove('hidden');
                        icon?.classList.add('rotate-180');
                    } else {
                        submenu.classList.add('hidden');
                        icon?.classList.remove('rotate-180');
                    }
                }
            });
        });

      });
    </script>
